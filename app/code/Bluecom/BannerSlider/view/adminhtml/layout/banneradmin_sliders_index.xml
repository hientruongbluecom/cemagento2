<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Sliders Manager</title>
    </head>
    <body>
        <referenceBlock name="menu">
            <action method="setActive">
                <argument name="itemId" xsi:type="string">Bluecom_BannerSlider::base</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Bluecom\BannerSlider\Block\Adminhtml\Sliders" name="admin.block.slider.grid.container">
                <block class="Bluecom\BannerSlider\Block\Adminhtml\Sliders\Grid" name="admin.block.slider.grid"></block>
            </block>
        </referenceContainer>
    </body>
</page>